<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @ride.title %>
</p>

<p>
  <b>Description:</b>
  <%= @ride.description %>
</p>

<p>
  <b>Latitude:</b>
  <%= @ride.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @ride.longitude %>
</p>

<p>
  <b>Request:</b>
  <%= @ride.request %>
</p>

<p>Nearby rides</p>
<ul>
	<% for ride in @ride.nearby %>
		<li><%= link_to ride.title, user_ride_path(@user, ride) %> (<%= ride.distance_from([@ride.latitude, @ride.longitude]).round(2) %> miles)</li>
	<% end %>
</ul>


<%= link_to 'Edit', edit_user_ride_path(@user, @ride) %> |
<%= link_to 'Back', user_rides_path(@user) %>

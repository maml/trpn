<h1>Listing rides</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Request</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rides.each do |ride| %>
  <tr>
    <td><%= ride.title %></td>
    <td><%= ride.description %></td>
    <td><%= ride.latitude %></td>
    <td><%= ride.longitude %></td>
    <td><%= ride.request %></td>
    <td><%= link_to 'Show', ride_path(ride) %></td>
		<td><%= link_to 'Edit', edit_ride_path(ride) %></td>
    <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


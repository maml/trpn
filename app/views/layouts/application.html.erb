<!DOCTYPE html>
<html>

	<head>
		<title>Trpn</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<nav>
			<ul>
				<% if current_page?(root_path) || current_page?(rides_path) %>
					<li>Rides</li>
				<% else %>
					<li><%= link_to "Rides", rides_path %></li>
				<% end %>
				<li>|</li>
				<li><%= link_to_unless_current "Users", users_path %></li>
				<li>|</li>
				<% if current_user %>
					<li>Logged in as <%= current_user.email %></li>
					<li>|</li>
					<li><%= link_to "Logout", logout_path %>
				<% else %>
					<li><%= link_to_unless_current "Sign up", signup_path %></li>
					<li>|</li>
					<li><%= link_to_unless_current "Login", login_path %></li>
				<% end %>
				<li id="new_ride"><%= link_to "[+]", new_ride_path, title: "Create a new ride" %></li>
			</ul>
		</nav>

		<%= render "layouts/flash" %>
	
		<%= yield %>
	</body>

</html>
